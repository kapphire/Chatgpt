[Unit]
Description=Gunicorn instance to serve chatgpt app
After=network.target

[Service]
User=root
Group=www-data
WorkingDirectory=/root/chatgpt
Environment="PATH=/root/.local/share/virtualenvs/hackernews-XAnIAJGW/bin"
ExecStart=/root/.local/share/virtualenvs/hackernews-XAnIAJGW/bin/gunicorn --bind 127.0.0.1:8000 -w 1 -k uvicorn.workers.UvicornWorker app.main:app

[Install]
WantedBy=multi-user.target